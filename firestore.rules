rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Check if the request is from an authenticated admin
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    function isAuthenticated() {
      return request.auth != null;
    }

    // Classes collection: public read, admin-only write
    match /classes/{classId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Bookings collection: public create with validation, admin-only read/update/delete
    match /bookings/{bookingId} {
      allow read: if isAdmin();
      allow update, delete: if isAdmin();
      allow create: if true
        && request.resource.data.keys().hasAll(['classId', 'userName', 'userEmail', 'userAge', 'createdAt', 'reminderSent'])
        && request.resource.data.userName is string
        && request.resource.data.userName.size() > 0
        && request.resource.data.userName.size() <= 100
        && request.resource.data.userEmail is string
        && request.resource.data.userEmail.size() > 0
        && request.resource.data.userAge is int
        && request.resource.data.userAge > 0
        && request.resource.data.userAge < 120
        && request.resource.data.classId is string
        && request.resource.data.reminderSent is bool;
    }

    // Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
